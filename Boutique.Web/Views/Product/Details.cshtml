@using Boutique.Web.ViewModel.Product
@using System.Globalization
@model ProductDetailViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var vndCulture = new CultureInfo("vi-VN");
}

<h2>Product Details</h2>

<div class="card mb-3">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <p><strong>Price:</strong> @Model.Price.ToString("C", vndCulture)</p>
        <p><strong>Quantity:</strong> @Model.Quantity</p>
        <p><strong>Category:</strong> @Model.CategoryName</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Date Created:</strong> @Model.DateCreated.ToString("MM/dd/yyyy")</p>
        <p><strong>Date Modified:</strong> @Model.DateModified.ToString("MM/dd/yyyy")</p>

        <h4>Images</h4>
        <div class="d-flex flex-wrap">
            @if (Model.Images != null && Model.Images.Any())
            {
                foreach (var image in Model.Images)
                {
                    <div class="m-2" style="width: 150px; height: 200px; overflow: hidden;">
                        <img src="@Url.Content(image.ImagePath)" alt="@Model.Name" class="img-thumbnail" style="width: 100%; height: 100%; object-fit: cover;" />
                    </div>
                }
            }
            else
            {
                <p>No images available for this product.</p>
            }
        </div>
    </div>
    <div class="card-footer">
        <a href="@Url.Action("ProductHome", "Product")" class="btn btn-primary">Back to List</a>
    </div>
</div>
