<div class="container mt-5">
    <h2 class="text-center">Product Detail</h2>
    <div class="row">
        <!-- Image Slider -->
        <div class="col-md-6 position-relative">
            <div id="productCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://via.placeholder.com/600x400" alt="Product Image 1" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="https://via.placeholder.com/600x400/555555" alt="Product Image 2" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="https://via.placeholder.com/600x400/777777" alt="Product Image 3" class="d-block w-100">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-md-6">
            <h3>Product Name</h3>
            <p class="lead">$49.99</p>
            <div class="mb-3">
                <label for="size">Size:</label>
                <select class="form-control" id="size">
                    <option value="S">Small</option>
                    <option value="M">Medium</option>
                    <option value="L">Large</option>
                    <option value="XL">Extra Large</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="color">Color:</label>
                <select class="form-control" id="color">
                    <option value="red">Red</option>
                    <option value="blue">Blue</option>
                    <option value="green">Green</option>
                    <option value="black">Black</option>
                </select>
            </div>
            <div class="button_act">
                <button class="btn btn-primary">Add to Cart</button>
                <span class="heart-icon" onclick="toggleFavorite(this)"><i class="fas fa-heart"></i></span>
            </div>
            <div class="rating mt-2">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span>(3/5)</span>
            </div>
        </div>
    </div>

    <!-- Comments Section -->
    <div class="comment-section">
        <h4>Comments and Ratings</h4>
        <div>
            <div class="rating">
                <strong>User 1:</strong>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span>(3/5)</span>
                <p>Great product! Really loved it.</p>
            </div>
            <div class="rating">
                <strong>User 2:</strong>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span>(4/5)</span>
                <p>The quality is excellent!</p>
            </div>
            <div class="rating">
                <strong>User 3:</strong>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span>(2/5)</span>
                <p>Not what I expected.</p>
            </div>
        </div>
    </div>
</div>
<style>
    .product-image {
        width: 100%; /* Make the image fill the width of the card */
        height: 300px; /* Fixed height */
        object-fit: cover; /* Cover the area while maintaining aspect ratio */
    }

    .carousel-item img {
        height: 400px; /* Height for the slider images */
        object-fit: cover;
    }

    .rating {
        color: gold;
    }

        .rating p {
            color: black; /* This will make the comment text black */
        }
    .comment-section {
        margin-top: 20px;
    }

    .heart-icon {
        cursor: pointer;
        font-size: 24px; /* Size of the heart icon */
        color: black; /* Default color */
        margin-left: 15px; /* Spacing from button */
        margin-top: 10px;
    }

    .button_act {
        display: flex;
        align-items: center; /* Aligns items vertically */
    }

        .button_act .heart-icon {
            margin-left: 10px; /* Add space between button and heart icon */
            margin-bottom: 10px;
            font-size: 24px;
            color: black;
            cursor: pointer;
        }
</style>
<script>
    function toggleFavorite(button) {
        const icon = button.querySelector('i');
        icon.classList.toggle('text-danger'); // Change color to red when favorited
        icon.style.color = icon.style.color === 'red' ? 'black' : 'red'; // Toggle color between red and black
    }
</script>